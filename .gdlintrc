# GDScript Linter Configuration
# 用于 gdlint 工具的配置文件

# 禁用的检查
disable =
    # 允许在某些情况下有更长的行
    # max-line-length,

    # 允许函数复杂度稍高一些
    # function-complexity,

# 行长度限制
max-line-length = 100

# 函数复杂度限制
max-function-complexity = 15

# 最大参数数量
max-function-parameters = 5

# 缩进（Tab）
indent-size = 1
use-tabs = true

# 类名检查
class-name-style = PascalCase

# 函数名检查
function-name-style = snake_case

# 变量名检查
variable-name-style = snake_case

# 常量名检查
constant-name-style = SCREAMING_SNAKE_CASE

# 信号名检查
signal-name-style = snake_case

# 枚举值名检查
enum-name-style = SCREAMING_SNAKE_CASE

# 文件名检查
file-name-style = PascalCase

# 排除的文件和目录
exclude =
    .godot/,
    addons/gd_cubism/,
    build/,
    .git/,
    *.import

