# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# 所有文件的默认设置
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# GDScript 文件
[*.gd]
indent_style = tab
indent_size = 4
max_line_length = 100

# C# 文件
[*.cs]
indent_style = space
indent_size = 4
max_line_length = 100

# XML/项目文件
[*.{csproj,props,targets}]
indent_style = space
indent_size = 2

# JSON 文件
[*.json]
indent_style = space
indent_size = 2

# YAML 文件
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown 文件
[*.md]
max_line_length = 80
trim_trailing_whitespace = false

# Godot 项目文件
[*.{tscn,tres,godot,import}]
indent_style = tab
indent_size = 4

# 配置文件
[*.{cfg,ini,toml}]
indent_style = space
indent_size = 2

# Shell 脚本
[*.{sh,bash}]
indent_style = space
indent_size = 2
end_of_line = lf

# Batch 文件
[*.{bat,cmd}]
end_of_line = crlf

# Makefile
[Makefile]
indent_style = tab

